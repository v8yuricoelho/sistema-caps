<%= search_form_for @q do |f| %>
    <div class="row justify-content-end">
        <div class="form-group col-2">
            <%= f.label "" %>
            <%= f.search_field :code_cont, class: 'form-control', placeholder: 'Código da doença' %>
        </div>

        <div class="form-group col-3">
            <%= f.label "" %>
            <%= f.search_field :description_cont, class: 'form-control', placeholder: 'Nome da doença' %>
        </div> 

        <div class="form-group pt-4 mr-3">
            <%= f.submit 'Buscar', class: 'btn btn-primary shadow-sm'  %>
        </div>
    </div>
<% end %>