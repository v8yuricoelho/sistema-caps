<%= search_form_for @q do |f| %>
    <div class="row justify-content-end">
        <div class="form-group col-2">
            <%= f.label "" %>
            <%= f.collection_select(:cnes_unity_cont, Cnes.all.order(:unity), :unity, :unity, {include_blank: 'Unidade'}, class: 'form-control') %>
        </div>

         <div class="form-group col-2">
            <%= f.label "" %>
            <%= f.collection_select(:psychoative_substances_name_cont, PsychoativeSubstance.all.order(:name), :name, :name, {include_blank: 'Substâncias'}, class:'form-control') %>
        </div>

        <div class="form-group col-2">
            <%= f.label "" %>
            <%= f.select :status_eq, options_for_select(Patient.statuses), {include_blank: 'Status'}, class: 'form-control' %>
        </div>

        <div class="form-group col-2">
            <%= f.label "" %>
            <%= f.search_field :cid10s_code_cont, class: 'form-control', placeholder: 'Código CID-10' %>
        </div>

        <div class="form-group col-3">
            <%= f.label "" %>
            <%= f.search_field :name_cont, class: 'form-control', placeholder: 'Nome do paciente' %>
        </div> 

        <div class="form-group pt-4 mr-3">
            <%= f.submit 'Buscar', class: 'btn btn-primary shadow-sm'  %>
        </div>
    </div>
<% end %>