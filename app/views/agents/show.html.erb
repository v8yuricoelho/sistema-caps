<h4 class="text-center mt-4 mb-2">Informações de Agente</h4>

<div class="container shadow rounded mt-2">
    <div class="text-secondary text-center pt-3"><h6><strong>FICHA DO AGENTE</strong></h6></div>
    <hr class="mb-2 border">

    <div class="row justify-content-center mb-2">
        <div class="col">
            <div class="text-center"><strong>Nome</strong></div>
            <div class="text-center"><%= @agent.name %></div>
        </div>
    </div>

    <hr class="mb-2">

    <div class="row justify-content-center mb-2">
        <div class="col">
            <div class="text-center"><strong>CNES - Unidade</strong></div>
            <div class="text-center"><%= @agent.cnes.unity%></div>
        </div>
    </div>

     <hr class="mb-2">

    <div class="row justify-content-center mb-2">
         <div class="col">
            <div class="text-center"><strong>E-mail</strong></div>
            <div class="text-center"><% if @agent.email.nil? %><div class="mb-4"></div><% else %><%= @agent.email %><% end %></div>
        </div>
    </div>

    <hr class="mb-2">

    <div class="row justify-content-center mb-2">
        <div class="col">
            <div class="text-center"><strong>Fone</strong></div>
            <div class="text-center"><% if @agent.phone.nil? %><div class="mb-4"></div><% else %><%= @agent.phone %><% end %></div>
        </div>
    </div>

    <hr class="mb-2">

    <div class="row justify-content-center mb-2">
        <div class="col">
            <div class="text-center"><strong>Endereço</strong></div>
            <div class="text-center"><% if @agent.address.nil? %><div class="mb-4"></div><% else %><%= @agent.address %><% end %></div>
        </div>
    </div>

    <hr class="mb-3">

    <div class="text-center pb-3">
        <%= link_to ('Voltar'), agents_path, class: 'btn btn-dark shadow-sm', title: 'Voltar para tabela de agentes' %>
        <%= link_to ('Editar'), edit_agent_path(@agent), class: 'btn btn-primary shadow-sm', title: 'Editar ficha do agente' %>
    </div>
</div>